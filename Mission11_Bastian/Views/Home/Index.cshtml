@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel

<h1>The Shop Around the Corner Bookstore</h1>

@foreach (Book b in Model.Books)
{
    <div class="card m-1 p-1">
        <h4>
            @b.Title
            <span class="badge rounded-pill bg-primary text-white float-end"><small>$@b.Price</small></span>
        </h4>
        <h6>By: @b.Author</h6>
        <ul>
            <li>Classification: @b.Classification</li>
            <li>Category: @b.Category</li>
            <li>Number of Pages: @b.PageCount</li>
            <li>Publisher: @b.Publisher</li>
            <li>ISBN: @b.Isbn</li>
        </ul>
    </div>
}
